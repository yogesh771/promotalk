
@model IEnumerable<promoTalk.Models.buisinessInformation>

<div class="row">
    @{ if (Model.Count() <= 0)
        {
            <div style="text-align: center"> <h3>No Results Found</h3></div>
        }
        else
        {
            foreach (var item in Model.Where(x => x.isPremeum == true))
            {
                <div class="col-lg-12" style="border-bottom :1px solid #ddd; float: left ;margin-bottom :15px; padding-bottom: 15px;">
                    <div class="col-lg-4">
                    <a  href="@Url.Action("promo_screen_printersBIDescription", "Home", new { name = item.slugURL })">
                        <img src='@item.logo' height="80" width="80" /></a></div>
                    <div class="col-lg-8">
                        <div class="col-lg-12">
                            <b><i class="fas fa-building"></i>&nbsp;</b> <label> @Html.DisplayFor(modelItem => item.bname)</label>
                        </div>
                        <div class="col-lg-12 sameFonts">
                            <b><i class="fas fa-map-marker-alt"></i>&nbsp;</b>  <span> @Html.DisplayFor(modelItem => item.location),</span> @Html.DisplayFor(modelItem => item.City),
                            @Html.DisplayFor(modelItem => item.state.StateName), @Html.DisplayFor(modelItem => item.zipCode)
                        </div>
                        <div class="col-lg-12">
                            @{var str = ""; var str1 = "";
                                foreach (var item1 in ((IEnumerable<promoTalk.Models.buisinessService>)ViewBag.serviceList).Where(x => x.buisinessID == item.buisinessID))
                                {
                                    str = str + item1.service.ServiceName + ", ";
                                }
                                str1 = str.Substring(0, str.Length - 2);

                                <div> <b><i class="fas fa-cog"></i> &nbsp;</b> @str1</div>
                            }

                        </div>
                        <div class="col-lg-12 visitus">
                            @{ if (item.isScreenPrinter)
                                    {
                                @Html.ActionLink("Visit Us", "promo_screen_printersBIDescription", new { name = item.slugURL })
                                    }
                                    else if (item.isEmbroiders)
                                    {
                                @Html.ActionLink("Visit Us", "promoembroidersBIDescription", new { name = item.slugURL })
                                    }
                            }

                        </div>
                    </div>
                </div>

             }

         foreach (var item in Model.Where(x => x.isPremeum == false))
          {  <div class="col-lg-12" style="border-bottom: 1px solid #ddd;float: left;   margin-bottom: 15px;  padding-bottom :15px;">
                 <div class="col-lg-4">
                <a href="@Url.Action("promo_screen_printersBIDescription", "Home", new { name = item.slugURL })">
                     <img src='@item.logo' height="80" width="80" /></a></div>
                                        <div class="col-lg-8">
                                            <div class="col-lg-12">
                                                <b><i class="fas fa-building"></i>&nbsp;</b> <label> @Html.DisplayFor(modelItem => item.bname)</label>
                                            </div>
                                            <div class="col-lg-12 sameFonts">
                                                <b><i class="fas fa-map-marker-alt"></i>&nbsp;</b>  <span> @Html.DisplayFor(modelItem => item.location),</span> @Html.DisplayFor(modelItem => item.City),
                                                @Html.DisplayFor(modelItem => item.state.StateName), @Html.DisplayFor(modelItem => item.zipCode)

                                            </div>
                                            <div class="col-lg-12">
                                               
                                                @{var str = ""; var str1 = "";
                                                    foreach (var item1 in ((IEnumerable<promoTalk.Models.buisinessService>)ViewBag.serviceList).Where(x => x.buisinessID == item.buisinessID))
                                                    {
                                                        str = str + item1.service.ServiceName + ", ";
                                                    }
                                                    str1 = str.Substring(0, str.Length - 2);

                                                    <div> <b><i class="fas fa-cog"></i> &nbsp;</b> @str1</div>

                                                }

                                            </div>
                                            <div class="col-lg-12 visitus">
                                                @{ if (item.isScreenPrinter)
                                                            {
                                                        @Html.ActionLink("Visit Us", "promo_screen_printersBIDescription", new {  name = item.slugURL })
                                                            }
                                                            else if (item.isEmbroiders)
                                                            {
                                                        @Html.ActionLink("Visit Us", "promoembroidersBIDescription", new {  name = item.slugURL })
                                                            }
                                                }
                                            </div>
                                        </div>
                                    </div>
          }



        }
    }
</div>
