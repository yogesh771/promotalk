@model IEnumerable<promoTalk.Models.getProductCatalog_sp_Result>

<div class="container">
@{ if (Model.Count() <= 0)
    {
        <div style="text-align: center"> <h3>No Results Found</h3></div>
    }
    else
    {
        <div id="test-list">
            <ul class="list">
                @foreach (var item in Model)
                {
                    <li>

                        <a class="name" href="@Url.Action("offerDescription", "Home", new { title = item.slugURL })">
                            @*onclick="openModel('@item.thumbImageURL','@item.offerProviderURl','@item.productTitle')"*@
                            <h5>@item.supplierName</h5>
                            <img src='@item.thumbImageURL' alt="Image" />
                            <span class="cat-text">@Html.DisplayFor(modelItem => item.productTitle)</span>
                        </a>


                    </li>
                }
            </ul>
            <ul class="pagination"></ul>
        </div>
    }
}
</div>


<div class="modal fade" tabindex="-1" id="loginModal"
     data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    ×
                </button>
                <h4 class="modal-title">Flyers </h4>
            </div>
            <div class="modal-body">
                <a target="_blank" id="navigetid" href=""> <img id="img" /></a> 
            </div>           
        </div>
    </div>
</div>




