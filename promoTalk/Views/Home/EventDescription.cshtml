
@model promoTalk.Models.tbl_events
@{
    Layout="~/Views/Shared/_Layout.cshtml" ;
}


<div class="container">
    <div class="container-a col-lg-8">

        <div class="col-12">
		<h3 class="title123">@Html.DisplayFor(model => model.name)</h3>
           <div class="col-12">
               <img src='@Model.featuredImag'/>
           </div>
           

            @*---------- event Description ---------*@
            <div class="col-12 sameFonts" >
                @Html.Raw(Model.description)
            </div>

            <div class="col-12">
              <b>Venue </b>@Html.DisplayFor(model => model.Location)
            </div>

            <div class="col-12">
                <b>From </b>@Model.dateTime.ToString("MM/dd/yyyy")
            </div>

            <div class="col-12">
                <b>To </b>@Model.TillDateime.ToString("MM/dd/yyyy")
            </div>

            <div class="col-12">
                <b>Hosted By </b>@Html.DisplayFor(model => model.Hoster)
            </div>
            
                <div class="col-12">
                    <b>Event Type </b>

                    @{
                        if (Model.industrialEvent)
                        {
                            <span>Industry Event</span>
                        }
                        if (Model.associationEvent)
                        {
                            <span>Association Event</span>
                        }
                        if (Model.printerEvent)
                        {
                            <span>Print Event</span>
                        }
                        if (Model.emroidersEvent)
                        {
                            <span>Embroiders Event</span>
                        }
                        if (Model.decorators)
                        {
                            <span>Decorators Event</span>
                        }

                    }

                </div>
            <div class="col-12">
                @{ if (Model.EventWebsite != null)
                    {
                        <b><a class="extraClass btn-view" href='@Model.EventWebsite' target="_blank">View Event Website</a><br /></b>
                    }
                }

            </div>
            </div>
       
   
           
         
    </div>
	<div class="col-lg-4" style="margin:27px 0 0 0;">
        <div class="col-lg-12 s-form">
            @Html.Action("partial_subscription")
            </div>
        <div class="col-lg-12 event-box-left" style="padding:0px 0 0px; float:left;"> 
            <h5>MORE EVENTS IN @ViewBag.monthName </h5>
            @{ if (ViewBag.monthsEventsList != null)
                {
                   
                            foreach (var item in (IEnumerable<promoTalk.Models.tbl_events>)ViewBag.monthsEventsList)
                            {                                 
                                <div class="event-box">
								
                                    <div class="col-lg-3">
                                        <a href="@Url.Action("EventDescription", "Home", new {Title=item.slugURL })">
                                            <div style="width:100%">
                                                @item.dateTime.ToString("MMM")<br />
                                                <span>@item.dateTime.ToString("dd")<br /></span>
                                                @item.dateTime.ToString("yyyy")<br />
                                               

                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-lg-9">
                                        <span><a href="@Url.Action("EventDescription", "Home", new { Title=item.slugURL })">@Html.DisplayFor(modelItem => item.name)</a></span> <br />
                                        @Html.DisplayFor(modelItem => item.venue)<br />

                                        <b>Hosted By </b>@Html.DisplayFor(modelItem => item.Hoster)<br />

                                        <p><a href="@Url.Action("EventDescription", "Home", new {Title=item.slugURL })">View Event Details</a></p>

                                        
                                    </div>
                                </div>
                            }
                                              
                   
                }
            }
        </div>

        <div class="col-lg-12" style="padding:0px 0 15px; float:left;">
            <a href="http://camerareadyart.com" target="_blank"><img src="~/Content/marketing/news.jpg" /></a>
        </div>

           
        </div>
</div>



<style>
    .col-12 {
        padding: 10px;
    }
    .extraClass {
   color:black !important   
         }
    .extraClass:hover, .extraClass:focus {
    text-decoration:none !important   
    }
</style>

