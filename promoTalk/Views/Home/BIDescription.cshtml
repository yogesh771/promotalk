@model promoTalk.Models.buisinessInformation  
@{
   <title>@Model.bname</title>
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="container-a dt col-lg-8" style="padding-top: 28px;">
<div class="row customleft">
    <div class="col-lg-12">
	<div class="title_border1 title_border">
        <h2>@ViewBag.pagetitle</h2>
    </div>
        <div class="col-lg-5 post-detail-img">
            <img src='@Model.logo'/>
        </div>
        <div class="col-lg-7 leftside">
            <div class="col-lg-12">
                <label><i class="fas fa-user-tie"></i> &nbsp;</label><span>@Model.ContactPerson</span>
            </div>
            <div class="col-lg-12">
                <label><i class="fas fa-phone"></i>  &nbsp;</label><span>@Model.phone</span>
            </div>
            <div class="col-lg-12">
                <label><i class="fas fa-envelope"></i>  &nbsp;</label><span>@Model.email</span>
            </div>
            <div class="col-lg-12">
                <label><i class="fas fa-map-marker-alt"></i> &nbsp;</label><span>@Model.location, </span><span>@Model.City, </span>&nbsp;<span>@Model.state.StateName, </span><span> @Model.zipCode</span>
</div>
          
        </div>
    </div>
  
    <div class="col-lg-12 sameFonts" style="padding:0 29px;">
        <b>About Business</b>
        @Html.Raw(Model.description)
    </div>

    <div class="col-lg-12" style="padding:0 29px 10px;">
        <b>Services</b>
        @{var str = ""; var str1 = "";
            foreach (var item1 in ((IEnumerable<promoTalk.Models.buisinessService>)ViewBag.serviceList).Where(x => x.buisinessID == Model.buisinessID))
            {
                str = str + item1.service.ServiceName + ", ";
            }
            str1 = str.Substring(0, str.Length - 2);
            <p>@str1</p>
        }

    </div>
   <div><br /></div>
   

    </div>
	</div>
	<div class="col-lg-4" style="margin:27px 0 0 0;">
        <div class="col-lg-12 s-form">
            @Html.Action("partial_subscription")
            </div>
			<div class="col-lg-12" style="padding:15px 0 15px; float:left;">
            <a href="http://camerareadyart.com" target="_blank"><img src="~/Content/marketing/news.jpg" /></a>
        </div>
			</div>
	</div>
