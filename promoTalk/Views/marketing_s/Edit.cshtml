@model promoTalk.Models.marketing

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutInternal.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "marketing_s", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
